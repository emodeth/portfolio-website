generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id          Int    @id @default(autoincrement())
  name        String
  description String
  imgUrl      String
  jobTitle    String
  mail        String
  githubUrl   String
  resume      String
}

model WorkExperience {
  id          Int      @id @default(autoincrement())
  companyName String
  description String
  type        String
  workTitle   String
  startDate   DateTime
  endDate     DateTime
}

model Project {
  id              Int      @id @default(autoincrement())
  title           String
  description     String
  projectContent  String
  projectCoverUrl String
  videoUrl        String?
  codeUrl         String?
  demoUrl         String?
  photos          String[]
  techStack       Tech[]
}

model Tech {
  id       Int       @id @default(autoincrement())
  name     String
  iconName String
  projects Project[]
}
